{
  "name": "txlens",
  "version": "1.0.1",
  "description": "A command-line tool to decode and explain Solana blockchain transactions",
  "main": "dist/index.js",
  "bin": {
    "txlens": "./bin/txlens.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "ts-node src/cli.ts",
    "dev": "ts-node src/cli.ts",
    "clean": "rm -rf dist",
    "prebuild": "pnpm run clean",
    "prepublishOnly": "pnpm run build",
    "typecheck": "tsc --noEmit",
    "prepack": "pnpm run build",
    "postinstall": "echo 'TxLens installed successfully! Run: txlens --help'"
  },
  "keywords": [
    "solana",
    "blockchain",
    "transaction",
    "decoder",
    "cli",
    "solana-transaction",
    "transaction-decoder",
    "solana-cli",
    "web3",
    "crypto",
    "defi",
    "spl-token",
    "transaction-explorer",
    "blockchain-tools",
    "developer-tools"
  ],
  "author": "Dushyant Kashyap <dushyant@ayudh.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ayudhinc/TxLens.git"
  },
  "bugs": {
    "url": "https://github.com/ayudhinc/TxLens/issues"
  },
  "homepage": "https://github.com/ayudhinc/TxLens#readme",
  "dependencies": {
    "@solana/web3.js": "^1.95.8",
    "commander": "^12.1.0",
    "chalk": "^4.1.2",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2"
  },
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
